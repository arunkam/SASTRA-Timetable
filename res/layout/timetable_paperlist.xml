<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:minHeight="60dip"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<View
		android:id="@+id/colorLabel"
		android:layout_height="fill_parent"
		android:minHeight="60dip"
		android:layout_width="5dip"
		android:layout_alignTop="@+id/SNameL"	
		android:layout_alignBottom="@+id/SNameL"
		android:background="#FFFFFF">
	</View>
	<TextView
		android:text="SNameL"
		android:id="@+id/SNameL"
		android:paddingLeft="5dip"
		android:maxWidth="230dip"
		android:minHeight="60dip"
		android:layout_toRightOf="@id/colorLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
      <TextView
    	android:text="STeacherL"
		android:id="@+id/STeacherL"
		android:maxWidth="80dip"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBottom="@id/SNameL"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
                android:text=" - "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/Hyphen1"
                android:layout_alignBottom="@id/SNameL"
                android:layout_toLeftOf="@+id/STeacherL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
     <TextView
    	android:text="SCodeL"
		android:id="@+id/SCodeL"
		android:maxWidth="80dip"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBottom="@id/SNameL"
        android:layout_toLeftOf="@+id/Hyphen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
       
  
</RelativeLayout>